<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="BoardDao">
  <resultMap type="Board" id="BoardMap">
    <id     column="BNOS"    property="no"/>
    <result column="BNM"  property="title"/>
    <result column="CONT"    property="content"/>
    <result column="CR_DT"    property="createDate"/>
    <result column="ED_DT"    property="editDate"/>
    <result column="WRRT"    property="writer"/>
  </resultMap>
  <insert id="insert" parameterType="Board">
    insert into BOARD(BNM,CONT,CR_DT,ED_DT,WRRT)
    values(#{title},#{content},#{createDate},#{editDate},#{writer})
  </insert>
  
  <update id="update" parameterType="Board">
    update BOARD set
      BNM=#{title},
      CONT=#{content}
    where BNOS=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from BOARD
    where BNOS=#{no}
  </delete>

  <select id="selectList" resultMap="BoardMap">
    select BNOS, BNM, CONT, CR_DT, ED_DT, VIEWS, WRRT 
    from BOARD
  </select>
  
    <select id="selectOne" parameterType="map" resultMap="BoardMap">
    select BNOS, BNM, CONT, CR_DT, ED_DT, VIEWS, WRRT
    from BOARD
    where 
    <if test="no != null">
      BNOS=#{no}
    </if>
    <if test="BNM != null">
      BNM=#{title}
    </if>
  </select>
</mapper>
